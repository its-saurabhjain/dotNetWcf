<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>
  <system.serviceModel>
    <services>
      <service name="ChatServiceLibrary.ChatService" behaviorConfiguration="Meta">
        <!--<endpoint binding="netMsmqBinding" address="net.msmq://localhost/private/chat" bindingName="netMsmqBinding" bindingConfiguration="myMsmqConfig" contract="ChatServiceLibrary.IChat"/>-->
        <endpoint binding="wsHttpBinding" address="ws" bindingConfiguration="HttpTxFlow" contract="ChatServiceLibrary.IChat"/>

        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"/>
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8080/chat"/>
            <add baseAddress="net.Tcp://localhost:8081/chat"/>
          </baseAddresses>
        </host>
      </service>
    </services>
    <bindings>
      <!--<netMsmqBinding>
        <binding name="myMsmqConfig">
          <security mode="None"/>
          </binding>
      </netMsmqBinding>-->
      <wsHttpBinding>
        <binding name="HttpTxFlow" transactionFlow="true">
          <reliableSession enabled="true"/>
        </binding>
      </wsHttpBinding>
    </bindings>
    <behaviors>
      <serviceBehaviors>
        <behavior name="Meta">
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>